@model AppoinmentViewModel

<!DOCTYPE html>
<html lang="zxx">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="description" content="Orbitor,business,company,agency,modern,bootstrap4,tech,software">
    <meta name="author" content="themefisher.com">

    <title>Novena- Health & Care Medical template</title>

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.ico" />

    <!-- bootstrap.min css -->
    <link rel="stylesheet" href="~/UserFiles/plugins/bootstrap/css/bootstrap.min.css">
    <!-- Icon Font Css -->
    <link rel="stylesheet" href="~/UserFiles/plugins/icofont/icofont.min.css">
    <!-- Slick Slider  CSS -->
    <link rel="stylesheet" href="~/UserFiles/plugins/slick-carousel/slick/slick.css">
    <link rel="stylesheet" href="~/UserFiles/plugins/slick-carousel/slick/slick-theme.css">

    <!-- Main Stylesheet -->
    <link rel="stylesheet" href="~/UserFiles/css/style.css">

</head>

<body id="top">

    <section class="page-title bg-1">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="block text-center">
                        <span class="text-white">Book your Seat</span>
                        <h1 class="text-capitalize mb-5 text-lg">Appoinment</h1>

                        <!-- <ul class="list-inline breadcumb-nav">
                          <li class="list-inline-item"><a href="index.html" class="text-white">Home</a></li>
                          <li class="list-inline-item"><span class="text-white">/</span></li>
                          <li class="list-inline-item"><a href="#" class="text-white-50">Book your Seat</a></li>
                        </ul> -->
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="appoinment section">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="mt-3">
                        <div class="feature-icon mb-3">
                            <i class="icofont-support text-lg"></i>
                        </div>
                        <span class="h3">Call for an Emergency Service!</span>
                        <h2 class="text-color mt-3">+84 789 1256 </h2>
                    </div>
                </div>

                <div class="col-lg-8">
                    <div class="appoinment-wrap mt-5 mt-lg-0 pl-lg-5">
                        <h2 class="mb-2 title-color">Book an appoinment</h2>
                        <p class="mb-4">Mollitia dicta commodi est recusandae iste, natus eum asperiores corrupti qui velit . Iste dolorum atque similique praesentium soluta.</p>
                        <form class="appoinment-form" method="post" asp-action="Appoinment" asp-controller="Home">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Department</label>
                                        <select asp-for="DepartmentName" class="form-control" id="exampleFormControlSelect1">
                                            @for (int i = 0; i < Model.Departments.Count(); i++)
                                            {
                                                <option>@Model.Departments[i].DepartmentName</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label>Doctor</label>
                                        <select asp-for="DoctorName" class="form-control" id="exampleFormControlSelect2">
                                            @for (int i = 0; i < Model.Doctors.Count(); i++)
                                            {
                                                <option>@Model.Doctors[i].FirstName @Model.Doctors[i].LastName</option>
                                            }
                                        </select>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="Date">Date</label>
                                        <input asp-for="Date" id="date" type="date" class="form-control" placeholder="dd/mm/yyyy">
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="DateInTime">Time</label>
                                        <input asp-for="DateInTime" id="time" type="time" class="form-control" placeholder="Time">
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="Fullname">Fullname</label>
                                        <input asp-for="Fullname" id="name" type="text" class="form-control" placeholder="Full Name">
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group">
                                        <label asp-for="PhoneNumber">Phone Number</label>

                                        <input asp-for="PhoneNumber" id="phone" type="Number" class="form-control" placeholder="Phone Number">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group-2 mb-4">
                                <label asp-for="Message">Message</label>

                                <textarea asp-for="Message" id="message" class="form-control" rows="6" placeholder="Your Message"></textarea>
                            </div>

                            <button class="btn btn-main btn-round-full" type="submit">Make Appoinment<i class="icofont-simple-right ml-2"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/AccessaryFiles/js/signalr/dist/browser/signalR.js"></script>
    <!--
    Essential Scripts
    =====================================-->
    <!-- Main jQuery -->
    <script src="~/UserFiles/plugins/jquery/jquery.js"></script>
    <!-- Bootstrap 4.3.2 -->
    <script src="~/UserFiles/plugins/bootstrap/js/popper.js"></script>
    <script src="~/UserFiles/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/UserFiles/plugins/counterup/jquery.easing.js"></script>
    <!-- Slick Slider -->
    <script src="~/UserFiles/plugins/slick-carousel/slick/slick.min.js"></script>
    <!-- Counterup -->
    <script src="~/UserFiles/plugins/counterup/jquery.waypoints.min.js"></script>

    <script src="~/UserFiles/plugins/shuffle/shuffle.min.js"></script>
    <script src="~/UserFiles/plugins/counterup/jquery.counterup.min.js"></script>
    <!-- Google Map -->
    <script src="~/UserFiles/plugins/google-map/map.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAkeLMlsiwzp6b3Gnaxd86lvakimwGA6UA&callback=initMap"></script>

    <script src="~/UserFiles/js/script.js"></script>
    <script src="~/UserFiles/js/contact.js"></script>

    <script src="~/AccessaryFiles/js/user.js"></script>
    <script src="~/AccessaryFiles/js/site.js"></script>

</body>
</html>