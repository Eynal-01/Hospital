<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ReactProject</title>
    <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.ico" />

    <!-- bootstrap.min css -->
    <link rel="stylesheet" href="~/UserFiles/plugins/bootstrap/css/bootstrap.min.css">
    <!-- Icon Font Css -->
    <link rel="stylesheet" href="~/UserFiles/plugins/icofont/icofont.min.css">
    <link rel="stylesheet" href="~/UserFiles/css/style.css">
    <!-- Slick Slider  CSS -->
    <link rel="stylesheet" href="~/UserFiles/plugins/slick-carousel/slick/slick.css">
    <link rel="stylesheet" href="~/UserFiles/plugins/slick-carousel/slick/slick-theme.css">

    <!-- Main Stylesheet -->
</head>
<body>
    <header>
        <div class="header-top-bar">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <ul class="top-bar-info list-inline-item pl-0 mb-0">
                            <li class="list-inline-item"><a><i class="icofont-support-faq mr-2"></i>novenahospital@outlook.com</a></li>
                            <li class="list-inline-item"><i class="icofont-location-pin mr-2"></i><a target="_blank" href="https://maps.app.goo.gl/pnpw4B3r3KGenFaXA">70 Koroğlu Rəhimov, Bakı 1009</a>  </li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <div class="text-lg-right top-right-bar mt-2 mt-lg-0">
                            <a href="tel:+23-345-67890">
                                <span>Call Now : </span>
                                <span class="h4">+994 12-224-24-42</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navigation" id="navbar">
            <div class="container">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                    <img src="~/images/logo.png" alt="" class="img-fluid">
                </a>

                <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarmain" aria-controls="navbarmain" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="icofont-navigation-menu"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarmain">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active">
                            <a class="nav-link" asp-action="Index" asp-controller="Home">Home</a>
                        </li>
                        <li class="nav-item"><a class="nav-link" asp-action="About" asp-controller="Home">About</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Service" asp-controller="Home">Services</a></li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" asp-action="Department" asp-controller="Home" id="dropdown02" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Department <i class="icofont-thin-down"></i></a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown02">
                                <li><a class="dropdown-item" asp-action="Department" asp-controller="Home">Departments</a></li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" asp-action="Doctor" asp-controller="Home" id="dropdown03" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Doctors <i class="icofont-thin-down"></i></a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown03">
                                <li><a class="dropdown-item" asp-action="Doctor" asp-controller="Home">Doctors</a></li>
                            </ul>
                        </li>

                        <li class="nav-item"><a class="nav-link" asp-action="Appointments" asp-controller="Home">My appointments</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Recipes" asp-controller="Home">My recipes</a></li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" asp-action="BlogSindebar" asp-controller="Home" id="dropdown05" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Blog <i class="icofont-thin-down"></i></a>
                            <ul class="dropdown-menu" aria-labelledby="dropdown05">
                                <li><a class="dropdown-item" asp-action="BlogSindebar" asp-controller="Home">Blog with Sidebar</a></li>
                            </ul>
                        </li>
                        <li class="nav-item"><a class="nav-link" asp-action="Contact" asp-controller="Home">Contact</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()

    <script src="~/UserFiles/plugins/jquery/jquery.js"></script>
    <!-- Bootstrap 4.3.2 -->
    <script src="~/UserFiles/plugins/bootstrap/js/popper.js"></script>
    <script src="~/UserFiles/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/UserFiles/plugins/counterup/jquery.easing.js"></script>
    <!-- Slick Slider -->
    <script src="~/UserFiles/plugins/slick-carousel/slick/slick.min.js"></script>
    <!-- Counterup -->
    <script src="~/UserFiles/plugins/counterup/jquery.waypoints.min.js"></script>

    <script src="~/UserFiles/plugins/shuffle/shuffle.min.js"></script>
    <script src="~/UserFiles/plugins/counterup/jquery.counterup.min.js"></script>
    <script src="~/UserFiles/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/UserFiles/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/UserFiles/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>