<title>:: Oreo Hospital :: Blog Details</title>
<link rel="icon" href="favicon.ico" type="image/x-icon">
<!-- Favicon-->
<link rel="stylesheet" href="~/AdminFiles/assets/plugins/bootstrap/css/bootstrap.min.css">
<!-- Custom Css -->
<link rel="stylesheet" href="~/AdminFiles/assets/css/main.css">
<link rel="stylesheet" href="~/AdminFiles/assets/css/blog.css">
<link rel="stylesheet" href="~/AdminFiles/assets/css/color_skins.css">


<section class="content blog-page">
	<div class="block-header">
		<div class="row">
			<div class="col-lg-7 col-md-5 col-sm-12">
				<h2>
					Blog Detail
					<small>Welcome to Oreo</small>
				</h2>
			</div>
			<div class="col-lg-5 col-md-7 col-sm-12">
				<ul class="breadcrumb float-md-right">
					<li class="breadcrumb-item"><a href="/Admin/Index"><i class="zmdi zmdi-home"></i> Oreo</a></li>
					<li class="breadcrumb-item"><a href="blog-dashboard.html">Blog</a></li>
					<li class="breadcrumb-item active">Blog Detail</li>
				</ul>
			</div>
		</div>
	</div>
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-8 col-md-12">
				<div class="card single_post">
					<div class="body">
						<h3 class="m-t-0 m-b-5"><a href="blog-details.html">@ViewBag.Post.Title</a></h3>
						<ul class="meta">
							<li><a href="#"><i class="zmdi zmdi-account col-blue"></i>Posted By: @ViewBag.Post.Admin.UserName</a></li>
							<li><a href="#"><i class="zmdi zmdi-label col-red"></i>@ViewBag.Post.Department.DepartmentName</a></li>
							<li><a href="#"><i class="zmdi zmdi-eye"></i>@ViewBag.Post.ViewCount</a></li>
						</ul>
					</div>
					<div class="body">
						<div class="img-post m-b-15" style="background-color:rgba(200, 200, 200,0.4);">
							<div id="carouselExampleIndicators-@ViewBag.Post.PostId" class="carousel slide" data-ride="carousel">
								<div class="carousel-inner">
									@for (var k = 0; k < ViewBag.Post.Images.Count; k++)
									{
										if (k == 0)
										{
											<div class="carousel-item active" style="text-align:center;width:100%;">
												<img class="img-fluid" src="@ViewBag.Post.Images[k]" alt="Responsive image">
											</div>
										}
										else
										{
											<div class="carousel-item" style="text-align:center;width:100%;">
												<img class="img-fluid" src="@ViewBag.Post.Images[k]" alt="Responsive image">
											</div>
										}
									}
								</div>
								@if (ViewBag.Post.Images.Count > 1)
								{
									<a class="carousel-control-prev" href="#carouselExampleIndicators-@ViewBag.Post.PostId" role="button" data-slide="prev">
										<span class="carousel-control-prev-icon" aria-hidden="true"></span>
										<span class="sr-only">Previous</span>
									</a>
									<a class="carousel-control-next" href="#carouselExampleIndicators-@ViewBag.Post.PostId" role="button" data-slide="next">
										<span class="carousel-control-next-icon" aria-hidden="true"></span>
										<span class="sr-only">Next</span>
									</a>
								}
							</div>
						</div>
						<p>@ViewBag.Post.Content</p>
						<a href="/Admin/BlogList" title="read more" class="btn btn-round btn-info">Exit</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<script src="~/AccessaryFiles/js/signalr/dist/browser/signalR.js"></script>
<!-- Jquery Core Js -->
<script src="~/AdminFiles/assets/bundles/libscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->
<script src="~/AdminFiles/assets/bundles/vendorscripts.bundle.js"></script> <!-- Lib Scripts Plugin Js -->
<script src="~/AdminFiles/assets/bundles/mainscripts.bundle.js"></script><!-- Custom Js -->
<script src="~/AccessaryFiles/js/site.js"></script>
<script src="~/AccessaryFiles/js/user.js"></script>
